{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "env": {
    "browser": true,
    "jest": true
  },
  "extends": ["prettier/react", "prettier"],
  "rules": {
    "react/jsx-filename-extension": "off",
    "lines-between-class-members": 2,
    "block-spacing": 2,
    "no-trailing-spaces": 2,
    "space-before-blocks": 2,
    "space-before-function-paren": [
      "error",
      "never"
    ]
  },
  "plugins": [
    "babel",
    "prettier"
  ]
}
